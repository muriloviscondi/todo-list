{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // Config paths
      "@config": ["./src/app/config/index.ts"],

      // Styled Components paths
      "@icons": ["./src/app/components/icons/index.ts"],
      "@layout": ["./src/app/components/layout/index.ts"],
      "@ui": ["./src/app/components/ui/index.ts"],

      // Features paths
      "@toDoList": ["./src/app/features/todoList/index.ts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
